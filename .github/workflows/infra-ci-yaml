name: 'Code Check'

on:
  pull_request:
    branches:
      - main
    paths:
      - ".github/workflows/**"
      - "terraform/**"

jobs:
  code_check:
    name: Code Check
    runs-on: ubuntu-latest
    steps:
      - name: Pre Commit
        run: brew install pre-commit && pre-commit --version && pre-commit run --all-files
